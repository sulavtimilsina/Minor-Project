extends ../layout

block content
  .container
    .row
      .col-12.col-sm-8.col-lg-5
        h6.text-muted List Group with Images
        ul.list-group
          each shop in shops
            li.list-group-item.d-flex.justify-content-between.align-items-center
              | #{shop.user.username} 
              ul.list-group
                each product in shop.products
                    li.list-group-item.d-flex.justify-content-between.align-items-center
                        | #{product.name} 